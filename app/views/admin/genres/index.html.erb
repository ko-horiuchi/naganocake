<h1>ジャンル管理画面（一覧・追加を兼ねる）</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>ジャンル名</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to edit_admin_genre_path(genre.id) do %>
            <%= genre.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<h2>ジャンル追加</h2>
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <label for="name">ジャンル名</label></br>
    <%= f.text_field :name %></br>
    <%= f.submit 'ジャンル追加' %>
  <% end %>